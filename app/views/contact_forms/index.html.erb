<h1>Listing contact_forms</h1>

<%= "#{@contact_forms.count} inquiries" %>
<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Last name</th>
      <th>First name</th>
      <th>Subject</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @contact_forms.each do |contact_form| %>
      <tr>
        <td><%= contact_form.email %></td>
        <td><%= contact_form.last_name %></td>
        <td><%= contact_form.first_name %></td>
        <td><%= contact_form.subject %></td>
        <td><%= contact_form.description %></td>
        <td><%= link_to 'Show', contact_form %></td>
        <td><%= link_to 'Edit', edit_contact_form_path(contact_form) %></td>
        <td><%= link_to 'Destroy', contact_form, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

